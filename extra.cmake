if (EXISTS ${CMAKE_HOME_DIRECTORY}/.env)
    file(STRINGS ${CMAKE_HOME_DIRECTORY}/.env ENV_FILE)
    foreach(VAR ${ENV_FILE})
        string(REGEX MATCH "^[^=]*" KEY ${VAR})
        string(REGEX REPLACE "^[^=]*=" "" VALUE ${VAR})
        set(ENV{${KEY}} ${VALUE})
    endforeach()
    message(STATUS "${Magenta}OSS Region: " $ENV{ENV_CONFIG_OSS_REGION} ${ColourReset})
    message(STATUS "${Magenta}OSS Bucket: " $ENV{ENV_CONFIG_OSS_BUCKET} ${ColourReset})

    add_definitions(-DENV_CONFIG_OSS_ENDPOINT=$ENV{ENV_CONFIG_OSS_ENDPOINT})
    add_definitions(-DENV_CONFIG_OSS_ACCESS_KEY=$ENV{ENV_CONFIG_OSS_ACCESS_KEY})
    add_definitions(-DENV_CONFIG_OSS_ACCESS_KEY_SECRET=$ENV{ENV_CONFIG_OSS_ACCESS_KEY_SECRET})
    add_definitions(-DENV_CONFIG_OSS_REGION=$ENV{ENV_CONFIG_OSS_REGION})
    add_definitions(-DENV_CONFIG_OSS_BUCKET=$ENV{ENV_CONFIG_OSS_BUCKET})
else()
    message(STATUS "${Red} Please create ${Yellow}.env ${BoldBlue}")
    message("ENV_CONFIG_OSS_ACCESS_KEY          \{access_key\}")
    message("ENV_CONFIG_OSS_ACCESS_KEY_SECRET   \{secret_token\}")
    message("ENV_CONFIG_OSS_REGION              \{ap-southeast-1\}")
    message("ENV_CONFIG_OSS_BUCKET              \{buket\}")
    message("${ColourReset}")
endif()